clc; clear;
% s = input('Enter message to encrypt: ', 's');
s = 'The Incredibles';
swapper = '';
ballschecker = 0;

for ii = 1:length(s)
    if isstrprop(s(ii),'alpha') 
        swapper(ii) = s(ii);
        ballschecker = ballschecker +1;
    end
    if ballschecker == 2
        
        swapper = reverse(swapper);
        for jj = ii-1:ii
            s(jj) = swapper(jj);
        end
        swapper = '';
        ballschecker = 0;
    end
end

fprintf('%s', s)